<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
  <benchmarkDirectory>local/data/tarostering/long</benchmarkDirectory>
  <parallelBenchmarkCount>AUTO</parallelBenchmarkCount>
  <warmUpSecondsSpentLimit>30</warmUpSecondsSpentLimit>

  <inheritedSolverBenchmark>
    <problemBenchmarks>
      <xStreamAnnotatedClass>org.optaplanner.examples.tarostering.domain.TaRoster</xStreamAnnotatedClass>
      <inputSolutionFile>data/tarostering/unsolved/long01.xml</inputSolutionFile>
      <inputSolutionFile>data/tarostering/unsolved/long02.xml</inputSolutionFile>
      <!--<inputSolutionFile>data/tarostering/unsolved/long03.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long04.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long05.xml</inputSolutionFile>-->
      <inputSolutionFile>data/tarostering/unsolved/long_hint01.xml</inputSolutionFile>
      <inputSolutionFile>data/tarostering/unsolved/long_hint02.xml</inputSolutionFile>
      <!--<inputSolutionFile>data/tarostering/unsolved/long_hint03.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long_late01.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long_late02.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long_late03.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long_late04.xml</inputSolutionFile>-->
      <!--<inputSolutionFile>data/tarostering/unsolved/long_late05.xml</inputSolutionFile>-->
      <problemStatisticType>BEST_SCORE</problemStatisticType>
      <!--<problemStatisticType>STEP_SCORE</problemStatisticType>-->
      <!--<problemStatisticType>CALCULATE_COUNT_PER_SECOND</problemStatisticType>-->
      <!--<problemStatisticType>BEST_SOLUTION_MUTATION</problemStatisticType>-->
      <!--<problemStatisticType>MOVE_COUNT_PER_STEP</problemStatisticType>-->
      <!--<problemStatisticType>MEMORY_USE</problemStatisticType>-->
      <!--<singleStatisticType>CONSTRAINT_MATCH_TOTAL_BEST_SCORE</singleStatisticType>-->
      <!--<singleStatisticType>CONSTRAINT_MATCH_TOTAL_STEP_SCORE</singleStatisticType>-->
      <!--<singleStatisticType>PICKED_MOVE_TYPE_BEST_SCORE_DIFF</singleStatisticType>-->
      <!--<singleStatisticType>PICKED_MOVE_TYPE_STEP_SCORE_DIFF</singleStatisticType>-->
    </problemBenchmarks>

    <solver>
      <solutionClass>org.optaplanner.examples.tarostering.domain.TaRoster</solutionClass>
      <entityClass>org.optaplanner.examples.tarostering.domain.CourseAssignment</entityClass>
      <scoreDirectorFactory>
        <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
        <scoreDrl>org/optaplanner/examples/tarostering/solver/taRosteringScoreRules.drl</scoreDrl>
      </scoreDirectorFactory>
      <termination>
        <!--
          Official benchmark secondsSpentLimit allowed on:
          - ge0ffrey's main pc: sprint 11, medium 700, long 42000
        -->
        <secondsSpentLimit>42000</secondsSpentLimit>
      </termination>
      <constructionHeuristic>
        <constructionHeuristicType>WEAKEST_FIT</constructionHeuristicType>
      </constructionHeuristic>
    </solver>
  </inheritedSolverBenchmark>

  <solverBenchmark>
    <name>absolute300SeqLength2and3PillarPart</name>
    <solver>
      <localSearch>
        <unionMoveSelector>
          <moveListFactory>
            <cacheType>PHASE</cacheType>
            <moveListFactoryClass>org.optaplanner.examples.tarostering.solver.move.factory.TaChangeMoveFactory</moveListFactoryClass>
          </moveListFactory>
          <moveListFactory>
            <cacheType>PHASE</cacheType>
            <moveListFactoryClass>org.optaplanner.examples.tarostering.solver.move.factory.CourseAssignmentSwapMoveFactory</moveListFactoryClass>
          </moveListFactory>
          <moveListFactory>
            <cacheType>STEP</cacheType>
            <moveListFactoryClass>org.optaplanner.examples.tarostering.solver.move.factory.CourseAssignmentPillarPartSwapMoveFactory</moveListFactoryClass>
          </moveListFactory>
          <moveListFactory>
          <cacheType>STEP</cacheType>
          <moveListFactoryClass>org.optaplanner.examples.tarostering.solver.move.factory.CourseAssignmentSequenceSwitchLength2MoveFactory</moveListFactoryClass>
          </moveListFactory>
          <moveListFactory>
          <cacheType>STEP</cacheType>
          <moveListFactoryClass>org.optaplanner.examples.tarostering.solver.move.factory.CourseAssignmentSequenceSwitchLength3MoveFactory</moveListFactoryClass>
          </moveListFactory>
        </unionMoveSelector>
        <acceptor>
          <entityTabuSize>11</entityTabuSize>
        </acceptor>
        <forager>
          <acceptedCountLimit>1100</acceptedCountLimit>
        </forager>
      </localSearch>
    </solver>
  </solverBenchmark>
</plannerBenchmark>
